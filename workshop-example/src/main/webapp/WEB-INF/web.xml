<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <display-name>Todo List</display-name>
    <description>Todo List application</description>

    <servlet>
        <servlet-name>todos</servlet-name>
        <servlet-class>com.orange.todolist.TodosServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>todos</servlet-name>
        <url-pattern>/todos</url-pattern>
    </servlet-mapping>

</web-app>